
<div class="span12 text-right">
    <p><button class="btn btn-default btn-sm" ng-click="openModal('', 'createModal.html')">Create Product</button></p>
</div>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>No.</th>
            <th><a href="" ng-click="sort('ProductName')">Product Name</a></th>
            <th><a href="" ng-click="sort('QuantityPerUnit')">Quantity per Unit</a></th>
            <th><a href="" ng-click="sort('UnitPrice')">Unit Price</a></th>
            <th><a href="" ng-click="sort('UnitsInStock')">Units in Stock</a></th>
            <th><a href="" ng-click="sort('UnitsOnOrder')">Units on Order</a></th>
            <th><a href="" ng-click="sort('ReorderLevel')">Reorder Level</a></th>
            <th><a href="" ng-click="sort('Discontinued')">Discontinued</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="product in products">
            <td>{{gridIndex($index)}}</td>
            <td>{{product.ProductName}}</td>
            <td>{{product.QuantityPerUnit}}</td>
            <td>{{product.UnitPrice}}</td>
            <td>{{product.UnitsInStock}}</td>
            <td>{{product.UnitsOnOrder}}</td>
            <td>{{product.ReorderLevel}}</td>
            <td><input type="checkbox" ng-model="product.Discontinued"></td>
            <td>
                <button class="btn btn-default btn-sm" ng-click="openModal(product.ProductID, 'detailsModal.html')">Details</button>
                <button class="btn btn-default btn-sm" ng-click="openModal(product.ProductID, 'editModal.html')">Edit</button>
                <button class="btn btn-default btn-sm" ng-click="openModal(product.ProductID, 'deleteModal.html')">Delete</button>
            </td>
        </tr>
    </tbody>
</table>
<pagination direction-links="false" boundary-links="true" total-items="pagingInfo.totalItems" ng-model="pagingInfo.page" ng-change="pageChanged(page)"></pagination>




